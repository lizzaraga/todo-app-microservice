{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "auth_route": {
        "ClusterId": "auth_cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        }
      },
      "todo_route": {
        "ClusterId": "todo_cluster",
        "Match": {
          "Path": "/api/todo/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "auth_cluster": {
        "Destinations": {
          "auth_dest": {
            "Address": "http://auth-service:8080/"
          }
        }
      },
      "todo_cluster": {
        "Destinations": {
          "todo_dest": {
            "Address": "http://todo-service:8080/"
          }
        }
      }
    }
  }

}
